<main class="flex items-center justify-center h-screen bg-green-900">
  <div class=" bg-white w-96 p-10 rounded shadow-sm">
    <h2 class="text-center text-2xl mb-4">Welcome to Travelpedia</h2>
      <h2 class="text-center text-l mb-8">Let's sign up first!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class:"text-gray-700" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full py-2 bg-gray-50 text-gray-500 px-1 outline-none mb-4 rounded" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"text-gray-700 mb-4" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"w-full py-2 bg-gray-50 text-gray-500 px-1 outline-none mb-4 rounded" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:"text-gray-700" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full py-2 bg-gray-50 text-gray-500 px-1 outline-none mb-4 rounded" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"bg-green-700 mb-4 w-full text-white py-2 rounded hover:bg-green-600 transition-colors" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  </div>
</main>
