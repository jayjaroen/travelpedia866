
<main class="background">
<h1 class="text-center text-2xl"> Itineraries</h1>
  <div class="container">
    <div class="cards">
      <% @itineraries.each do |itinerary| %>
        <div class="list-card-category">
          <%= itinerary.name %>
         <div>Description: <%= itinerary.description %>
         <%= link_to "Create", new_itinerary_path %>
         </div>
        </div>
      <% end %>
    </div>
  </div>
</main>
