<main class="background">
  <div class="flex mx-auto px-4">
       <%# Mapbox %>
        <div class="bg-white h-screen w-1/2 mr-2 rounded p-8">
          <h2>Mapbox</h2>
            <div id="map"
              style="width: 100%; height: 600px;"
              data-marker="<%= @marker.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
        </div>

       <%# Intieray info %>
        <div class="w-1/2 bg-green-700 relative rounded p-8 h-1/2">
            <h1 class="text-white text-3xl ml-2 mr-2"><%= @itinerary.name %></h1>
            <%= cl_image_tag @itinerary.photo.key, :width=>400, :height=>450, class:"flex justify-center" %>
            <div>Description: <%= @itinerary.description %></div>
            <div><%= @itinerary.image%></div>
            <div> Comments: <%= @itinerary.comment%></div>
            <% if current_user != @itinerary.user %>
              <div><%= link_to 'Join', itinerary_booking_requests_path(@itinerary), method: :post, class:"absolute bottom-0 transform translate-x-96 bg-green-700 hover:bg-green-600 text-white p-2 rounded mb-2" %></div>
            <% end %>
        </div>

      <div class="width-1/2 ml-14">
      <div class="flex flex=col">
          <div class="text-xl bg-white p-3 text-green-700 border-dashed ">
            <h1>Bookings</h1>
            <% @booking_requests.each do |booking_request| %>
              <div>
              <%= booking_request.user.first_name.capitalize %>
              <%= booking_request.booking_status %>
              </div>
            <% end %>
            <%# display a list of booking_request for this itinerary %>

          </div>
      </div>
      </div>
  </div>
</main>
